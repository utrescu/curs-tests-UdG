<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <ElTemps.Pages.PopupError
                        Message="Identifica't. Perquè només els usuaris de la comarca poden veure la previsió del temps." />
                </NotAuthorized>
                <Authorizing>
                    <h1>Identificant!</h1>
                    <p>Quan s'hagin fet les comprovacions pertinents anireu al contingut</p>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Ops, precisament en aquesta adreça no hi ha res.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
