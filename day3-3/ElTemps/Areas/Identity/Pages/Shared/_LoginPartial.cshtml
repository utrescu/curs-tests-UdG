@using Microsoft.AspNetCore.Identity
@using ElTemps.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <form id="logout" class="w-full max-w-sm" method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
        <div class="flex items-center  py-2">
            <p id="salutation"
                class="appearance-none bg-transparent border-none w-full text-gray-100 dark:text-gray-800 mr-3 py-1 px-2 leading-tight focus:outline-none"
                type="text" aria-label="Hello!">
                Hola, @UserManager.GetUserName(User)!
            </p>
            <button id="logout" type="submit"
                class="flex-shrink-0 bg-teal-500 hover:bg-teal-700 border-white dark:border-black hover:border-gray-500 text-sm border-2 text-white py-1 px-2 rounded">
                Sortir
            </button>
        </div>
    </form>
}
else
{
        <a class="my-1 text-sm text-gray-100 dark:text-gray-800 font-medium hover:text-indigo-500 dark:hover:text-indigo-400 md:mx-4 md:my-0"
        asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="my-1 text-sm text-gray-100 dark:text-gray-800 font-medium hover:text-indigo-500 dark:hover:text-indigo-400 md:mx-4 md:my-0"
        asp-area="Identity" asp-page="/Account/Login">Log in</a>
}
